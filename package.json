{
    "name": "express-starter",
    "version": "1.0.0",
    "main": "dist/app.js",
    "license": "UNLICENSED",
    "scripts": {
        "build": "rm -rf dist && tsc",
        "lint": "eslint './src/**/*.{ts,js}'",
        "audit-dependencies": "audit-ci --config audit-ci.json",
        "lint-fix": "eslint './src/**/*.ts' --fix",
        "startold": "NODE_ENV=production  src/index.ts",
        "start": "NODE_ENV=production node ./dist/index.js",
        "dev": "NODE_ENV=development ts-node-dev src/index.ts",
        "pretest": "env 'npm_config_strict-ssl=false' node ./node_modules/mongodb-memory-server/postinstall.js",
        "test": "NODE_ENV=development jest --forceExit --runInBand --detectOpenHandles --coverage", 
        "test-watch": "NODE_ENV=development jest  --runInBand",
        "start-local-sonarqube": "docker-compose -f docker-compose.sonar.yml up -d",
        "stop-local-sonarqube": "docker-compose -f docker-compose.sonar.yml down"
    },
    "dependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.1",
        "@types/helmet": "^0.0.45",
        "@types/jest": "^25.1.4",
        "@types/mongoose": "^5.7.7",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "express-basic-auth": "^1.2.0",
        "garage-utils": "^5.0.0",
        "helmet": "^3.21.3",
        "http-hash-router": "^2.0.1",
        "lodash": "^4.17.15",
        "mongoose": "^5.9.5",
        "nodemon": "^2.0.4",
        "send-data": "^8.0.0",
        "tslib": "^1.10.1",
        "yarn": "^1.22.4"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.149",
        "@types/mongodb-memory-server": "^2.3.0",
        "@typescript-eslint/eslint-plugin": "^2.24.0",
        "@typescript-eslint/parser": "^2.24.0",
        "audit-ci": "^2.5.1",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-sonarjs": "^0.5.0",
        "husky": "^4.2.3",
        "jest": "^25.1.0",
        "jest-junit": "^10.0.0",
        "jest-sonar-reporter": "^2.0.0",
        "mongodb-memory-server": "^6.4.1",
        "prettier": "^1.19.1",
        "prettier-eslint": "^9.0.1",
        "sonarqube-scanner": "^2.5.0",
        "sonarqube-verify": "^1.0.2",
        "ts-jest": "^25.2.1",
        "ts-node": "^8.7.0",
        "ts-node-dev": "^1.0.0-pre.44",
        "typescript": "^3.8.3"
    },
    "engines": {
        "node": "12.x.x"
    },
    "jestSonar": {
        "reportPath": "coverage",
        "reportFile": "test-reporter.xml",
        "indent": 4
    }
}
